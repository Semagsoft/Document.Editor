                                        <Fluent:Spinner Name="SearchPanel_LineSpinner" Header="Line:" Format="0" Minimum="1" Margin="5,2,5,2" />
                                        <Fluent:Button Name="SearchPanel_GoToButton" Header="Go To" SizeDefinition="Middle">
                                            <Fluent:Button.Icon>
                                                <Image Source="pack://application:,,,/Images/Edit/goto16.png" />
                                            </Fluent:Button.Icon>
                                        </Fluent:Button>
                                    </StackPanel>
                                </avalonDock:LayoutAnchorable>
                            </avalonDock:LayoutAnchorablePane>
                        </avalonDock:LayoutPanel>
                    </avalonDock:LayoutRoot>
                </avalonDock:DockingManager>
            </Grid>
        </Grid>
        <Fluent:StatusBar x:Name="StatusBar" Grid.Row="2" Margin="0,-1,0,-1">
            <Fluent:StatusBarItem Title="Lines" HorizontalAlignment="Left">
                <TextBlock x:Name="LinesTextBlock" Text="Lines" />
            </Fluent:StatusBarItem>
            <Fluent:StatusBarItem Title="Columns" HorizontalAlignment="Left">
                <TextBlock x:Name="ColumnsTextBlock" Text="Columns" />
            </Fluent:StatusBarItem>
            <Separator HorizontalAlignment="Left" />
            <Fluent:StatusBarItem Title="Word Count" HorizontalAlignment="Left">
                <TextBlock x:Name="WordCountTextBlock" Text="Word Count" />
            </Fluent:StatusBarItem>
            <Separator HorizontalAlignment="Left" />
            <Fluent:StatusBarItem Title="File Size" HorizontalAlignment="Left">
                <TextBlock x:Name="FileSizeTextBlock" Text="File Size" />
            </Fluent:StatusBarItem>
            <Separator HorizontalAlignment="Left" />
            <Fluent:StatusBarItem Title="Zoom Slider"
                                  HorizontalAlignment="Right">
                <Slider x:Name="zoomSlider"
                        Minimum="10"
                        Maximum="500"
                        IsDirectionReversed="False"
                        Style="{DynamicResource ZoomSliderStyle}"
                        Value="100" />
            </Fluent:StatusBarItem>
            <Fluent:StatusBarItem x:Name="ZoomTextBlock" Title="Zoom"
                                  HorizontalAlignment="Right"
                                  Value="{Binding Value, ElementName=zoomSlider, StringFormat=\{0:0\}%}" />
        </Fluent:StatusBar>
    </Grid>
</Fluent:RibbonWindow>